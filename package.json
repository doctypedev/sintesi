{
  "name": "@doctypedev/doctype",
  "version": "0.3.18",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/doctypedev/doctype.git"
  },
  "description": "The Self-Maintaining Documentation System - Automatically update documentation when code changes",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "doctype": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/cli/index.js",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint packages --ext .ts",
    "clean": "rm -rf dist",
    "generate:sidebar": "tsx docs/scripts/generateSidebar.ts",
    "docs:dev": "npm run generate:sidebar && vitepress dev docs",
    "docs:build": "npm run generate:sidebar && vitepress build docs",
    "docs:preview": "npm run generate:sidebar && vitepress preview docs"
  },
  "keywords": [
    "documentation",
    "ast",
    "typescript",
    "automation",
    "drift-detection"
  ],
  "author": "doctypedev",
  "license": "MIT",
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@doctypedev/core": "file:./crates/core",
    "@types/uuid": "^10.0.0",
    "dotenv": "^17.2.3",
    "ts-morph": "^21.0.1",
    "uuid": "^13.0.0",
    "yargs": "^17.7.2"
  },
  "optionalDependencies": {
    "@doctypedev/core-darwin-arm64": "^0.3.10"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/vue": "^1.0.31",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "eslint": "^8.56.0",
    "glob": "^13.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitepress": "^1.6.4",
    "vitest": "^1.1.0",
    "vue": "^3.5.25"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
