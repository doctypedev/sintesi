{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "tsBuildInfoFile": "./node_modules/.tsbuildinfo",
    "types": ["node"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [".", "../ai", "../content"],
  "exclude": [
    "node_modules",
    "dist",
    "__tests__",
    "**/*.test.ts",
    "**/*.spec.ts",
    "../**/node_modules",
    "../**/dist",
    "../**/__tests__"
  ]
}
